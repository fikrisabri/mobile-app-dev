<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.personalfinancialmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PersonalFinancialManagement">
        <activity
            android:name=".FinancialPlanningActivity"
            android:exported="false" />
        <activity
            android:name=".FinancialEducationActivity"
            android:exported="false" /> <!-- MainActivity must be exported because it has an intent-filter -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- AddTransactionActivity -->
        <activity
            android:name=".AddTransactionActivity"
            android:exported="false" /> <!-- HistoryActivity -->
        <activity
            android:name=".HistoryActivity"
            android:exported="false" /> <!-- AnalyticsActivity -->
        <activity
            android:name=".AnalyticsActivity"
            android:exported="false" /> <!-- SignUpActivity -->
        <activity
            android:name=".SignupActivity"
            android:exported="true" /> <!-- LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
    </application>

</manifest>